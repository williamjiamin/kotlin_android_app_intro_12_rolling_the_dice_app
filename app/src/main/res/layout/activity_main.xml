    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view_dice_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_sixteen"
            android:contentDescription="@string/str_img_desc_one"
            android:src="@drawable/dice_empty"
            tools:src="@drawable/dice1"
            />

        <ImageView
            android:id="@+id/image_view_dice_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_sixteen"
            android:contentDescription="@string/str_img_desc_two"
            android:src="@drawable/dice_empty"
            tools:src="@drawable/dice2"
            />

        <ImageView
            android:id="@+id/image_view_dice_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_sixteen"
            android:contentDescription="@string/str_img_desc_three"
            android:src="@drawable/dice_empty"
            tools:src="@drawable/dice3"
            />



    </LinearLayout>




    <Button
        android:id="@+id/btn_roll_dice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_sixteen"
        android:text="@string/str_roll"
        android:background="@color/AntiqueWhite4"/>




</RelativeLayout>